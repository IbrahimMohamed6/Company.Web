@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

<a asp-controller="Roles" asp-action="Create" class="btn btn-primary">Create New Role</a>

<h2>Roles List</h2>

@if (@Model.Count() > 0)
{
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Add New Role</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                    <td>
                        <!-- Details Button -->
                        <a asp-action="Details" asp-route-id="@role.Id" class="btn btn-info">Details</a>
                    </td>
                    <td>
                        <!-- Update Button -->
                        <a asp-action="Update" asp-route-id="@role.Id" class="btn btn-warning">Update</a>
                    </td>
                    <td>
                        <!-- Delete Button -->
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this department?');">Delete</button>
                        </form>
                    </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There Is No Roles</h3>
    </div>
}
